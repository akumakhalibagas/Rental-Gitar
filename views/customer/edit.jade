extends ../layout/base 
block content 
	section.content-header 
		h1 
			| Edit Data Customer
			small menu for editing Customer data
		ol.breadcrumb 
			li 
				a(href='#') 
					i.fa.fa-dashboard
					| Lainnya  
			li.active Here 
	section.content
		.box
			.box-header.with-border
				h3.box-title
					| Customer
				.box-tools.pull-right
					button(type='button', data-widget='collapse', data-toggle='tooltip',title='collapse').btn.btn-box-tool
						i.fa.fa-minus
					
			.box-body
				form(role='form',method='post' action='/customer/edit/#{(id==undefined) ? data.id : id}')
					.row
						
						.col-xs-6
							.box-body
								- if (messages.msg_error) 
									.alert.alert-danger.alert-dismissable 
										button.close(type='button', data-dismiss='alert', aria-hidden='true') 
											| ×
										h4
											i.icon.fa.fa-ban
											| Alert! 
										| !{messages.msg_error}
								- if (messages.msg_info) 
									.alert.alert-success.alert-dismissable 
										button.close(type='button', data-dismiss='alert', aria-hidden='true') 
											| ×
										h4
											i.icon.fa.fa-ban
											| Success! 
										| !{messages.msg_info}
								.form-group
									label
										| Nama customer
									input(type='text',value="#{data.nama_customer}",name='nama_customer',placeholder='Masukkan Nama', autofocus).form-control
								.form-group
									label
										| Gender
									input(type='text',value="#{ (kode_gitar == undefined) ? data.kode_gitar : kode_gitar }",name='kode_gitar',placeholder='Masukkan Kode Gitar').form-control
								.form-group
									label
										| Tanggal Sewa
									input(type='text',value="#{ (tanggal_sewa == undefined) ? data.tanggal_sewa : tanggal_sewa }",name='tanggal_sewa',placeholder='Masukkan Tanggal Kembali').form-control
								.form-group
									label
										| Tanggal Kembali
									input(type='text',value="#{ (tanggal_kembali == undefined) ? data.tanggal_kembali : tanggal_kembali }",name='tanggal_kembali',placeholder='Masukkan Tanggal Kembali').form-control
								.form-group
									label
										| Harga
									input(type='text',value="#{ (harga == undefined) ? data.harga : harga }",name='harga',placeholder='Masukkan Harga').form-control
							.box-footer
								input(type="hidden",name="_method", value="PUT")
								button(type='submit').btn.btn-primary
									i.fa.fa-pencil 
									|  Edit
								a(href='/customer').btn.btn-primary.pull-right
									| Back